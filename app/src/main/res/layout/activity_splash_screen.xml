<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.dynamicmessenger.activitys.SplashScreenActivity">

    <com.example.dynamicmessenger.customViews.CustomGradientView
        android:id="@+id/splashScreenCustomGradientView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:downEndColor="@color/GradientEndColor"
        app:downStartColor="@color/GradientStartColor"
        app:endColor="@color/GradientEndColorDark"
        app:isTopView="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:startColor="@color/GradientStartColorDark" />

    <ImageView
        android:id="@+id/splashScreenImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_messenger" />

    <com.example.dynamicmessenger.customViews.CustomGradientView
        android:id="@+id/splashScreenCustomGradientView2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:downEndColor="@color/GradientEndColor"
        app:downStartColor="@color/GradientStartColor"
        app:endColor="@color/GradientEndColorDark"
        app:isTopView="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:startColor="@color/GradientStartColorDark" />

    <TextView
        android:id="@+id/splashScreenTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Dynamic messenger"
        android:textColor="@color/GradientStartColorDark"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/splashScreenImageView"
        app:layout_constraintStart_toStartOf="@+id/splashScreenImageView"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>