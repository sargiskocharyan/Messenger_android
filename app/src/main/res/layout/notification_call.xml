<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:background="#282e31">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/notificationCallAvatarCircleImageView"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layerType="hardware"
        tools:src="#0f0"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/notificationCallAvatarCircleImageView"
        android:layout_alignEnd="@+id/notificationCallAvatarCircleImageView"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="-2dp"
        android:src="@drawable/ic_armenia"/>

    <LinearLayout
        android:id="@+id/text_wrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/notificationCallAvatarCircleImageView"
        android:layout_alignTop="@+id/notificationCallAvatarCircleImageView"
        android:layout_alignBottom="@+id/notificationCallAvatarCircleImageView"
        android:layout_marginTop="-12dp"
        android:layout_marginBottom="-12dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical|left"
        android:orientation="vertical"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/notificationCallName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#FFF"
            android:fontFamily="sans-serif-medium"
            android:gravity="left"
            tools:text="Name"/>

        <TextView
            android:id="@+id/notificationCallTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#FFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left"
            tools:text="Dynamic Call"/>

        <TextView
            android:id="@+id/subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#6BFFFFFF"
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="left"
            tools:text="to Account Name"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="48.3dp"
        android:paddingTop=".3dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/notificationCallDeclineButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/decline_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#ef5050"
                android:fontFamily="sans-serif-medium"
                android:drawableLeft="@drawable/ic_baseline_call_end_24"
                android:drawablePadding="12dp"
                android:text="decline"/>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/notificationCallAcceptButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/answer_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textAllCaps="true"
                android:gravity="center"
                android:textSize="14sp"
                android:textColor="#5ee067"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:drawablePadding="12dp"
                android:text="accept"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>