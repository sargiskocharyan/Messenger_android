<?xml version="1.0" encoding="utf-8"?>
<rotate xmlns:android="http://schemas.android.com/apk/res/android"
    android:fromDegrees="-90"
    android:pivotX="50%"
    android:pivotY="50%"
    android:toDegrees="1080">

    <shape
        android:shape="ring"
        android:useLevel="false">

        <gradient
            android:endColor="@color/GradientStartColorDark"
            android:startColor="#00B536FF"
            android:centerColor="#C9368DFF"
            android:centerY="0.5"
            android:type="sweep"
            android:useLevel="false"/>
    </shape>

</rotate>